<mvc:View
    controllerName="luxasia.controller.brandselection"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page>
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        icon="sap-icon://arrow-left"
                        size="1rem"
                        color="#000000"
                        press="onNavBack"
                    />
                    <Text text="CUSTOMER SEARCH" />
                </contentLeft>
                <contentRight>
                    <Button
                        text="CREATE NEW PROFILE"
                        press="onNextPage"
                        class="wide-button"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <content>
            <FlexBox
               class="flex-spacing custom-input-container"
            >
                <FlexBox alignItems="Center">
                    <Input
                        id="mobileInput"
                        placeholder="Mobile Number"
                    />
                </FlexBox>
                <FlexBox alignItems="Center">
                    <Input
                        id="emailInput"
                        placeholder="Email Address"
                    />
                </FlexBox>
                <FlexBox alignItems="Center">
                    <Input
                        id="nameInput"
                        placeholder="Name"
                    />
                </FlexBox>
                <FlexBox alignItems="Center">
                    <Input
                        id="surnameInput"
                        placeholder="Surname"
                    />
                </FlexBox>
                <Button
                    text="Search"
                    press="onSearch"
                    class="wide-button"
                />
            </FlexBox>
        </content>
    </Page>
</mvc:View>
